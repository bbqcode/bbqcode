<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" lang="@Html.CultureName()" />
    <meta name="description" content="@Html.Localized("MetaDescription")" />
    <title>@Html.Localized("PageTitle")</title>
    <link rel="shortcut icon" href="@Url.Content("~/Content/img/logo.ico")" type="image/x-icon" />
    @if (Html.IsDebug())
    {
        <link href="@Url.Content("~/Content/css/reset.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/css/960.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/css/site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Content/js/libs/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/js/libs/jsCarousel.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/js/libs/easing.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/js/core/core.js")" type="text/javascript"></script>
    }
    else
    {
        <link href="@Url.Content("~/Content/css/bbqcode.min.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Content/js/bbqcode.min.js")" type="text/javascript"></script>
    }
    @RenderSection("head", false)
</head>
<body>
    <div id="header">
        <div class="container_12">
            <a id="logo" href="/" title="@Html.Localized("LogoTitleText")" ></a>
            <div>
                <ul id="nav-menu">
                    <li><span>@Html.LocalizedLink("", "NavHome", true)</span></li>
                    <li><span>@Html.LocalizedLink("projects", "NavProjects")</span></li>
                    @*<li><span>@Html.LocalizedLink("services", "NavServices")</span></li>*@
                    <li><span>@Html.LocalizedLink("coop", "NavCoop")</span></li>
                    <li><span>@Html.LocalizedLink("contactus", "NavContactUs")</span></li>
                    <li><span>@Html.CultureLink("fr", "NavFr")</span></li>
                    <li><span>@Html.CultureLink("en", "NavEn")</span></li>
                </ul>
            </div>
        </div>
    </div>
    @RenderSection("slider", false)
    <div id="content">
        <div class="container_12">
            <div class="grid_12 alpha" id="mainContent">
                @RenderBody()
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div id="prefooter"></div>
    <div id="footer">
        <div class="container_12">
            <div class="grid_3 alpha">
                <h3>@Html.LocalizedTitle("FooterTheCooperative")</h3>
                <ul>
                    <li>@Html.LocalizedLink("coop", "FootCoopMission", "mission")</li>
                    <li>@Html.LocalizedLink("coop", "FootCoopMembers", "members")</li>
                    <li>@Html.LocalizedLink("projects", "FootProjects")</li>
                </ul>
            </div>
            <div class="grid_3">
                <h3>@Html.LocalizedTitle("FooterGetInTouch")</h3>
                <ul>
                    <li><a href="#">Test</a></li>
                    <li><a href="#">Test</a></li>
                    <li><a href="#">Test</a></li>
                    <li><a href="#">Test</a></li>
                </ul>
            </div>
            <div class="grid_3">
                <h3>@Html.LocalizedTitle("FooterBlog")</h3>
                <ul>
                    <li><a href="#">Test</a></li>
                    <li><a href="#">Test</a></li>
                </ul>
            </div>
            <div class="grid_3 omega">
                <h3>@Html.LocalizedTitle("FooterFindUs")</h3>
                <ul>
                    <li><a href="#">Test</a></li>
                    <li><a href="#">Test</a></li>
                    <li><a href="#">Test</a></li>
                </ul>
            </div>
        </div>
    </div>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-44400111-4', 'bbqcode.com');
        ga('send', 'pageview');
    </script>
</body>
</html>
