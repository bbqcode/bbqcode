@model Dictionary<String, BBQCode.Web.Models.ProjectModel>

@section slider{
    <div id="title">
        <div class="center_margin">
            <h1>@Html.LocalizedTitle("ContentTitle")</h1>
        </div>
    </div>
}
<style type="text/css">
    .projects div
    {
        margin-bottom: 10px;
    }
    .project
    {
        display: block;
        height: 60px;
        background-color: #efefef;
        border: 1px solid #CDCDCD;
        -webkit-border-radius: 0 0 10px 10px;
        -moz-border-radius: 0 0 10px 10px;
        border-radius: 0 0 10px 10px;
        box-shadow: 0 1px 1px #dddddd;
    }
    .project:hover
    {
        background-color: #e5e5e5;
    }
    .projectImage
    {
        border: 1px solid #e5e5e5;
        padding: 5px;
        margin-bottom: 20px;
    }
    .backToNavLink
    {
        font-size: 1.2em;
        color: inherit;
        text-decoration: none;
    }
    .backToNavLink:hover
    {
        text-decoration: underline;
    }
    .backNavTitle
    {
        margin-top: 20px;
    }
    
    .projectTitle
    {
        margin-bottom: 10px;
        margin-top: 10px;
    }
    .texting
    {
        position: relative;
    }
</style>
<div class="projects" id="navigation">
    @{
        var i = 0;
    }
    @foreach (var p in Model)
    {
        string c = "project grid_3";
        if (i % 4 == 0) { c += " alpha"; } else if (i % 4 == 3) { c += " omega"; }
        i++;
        <a href="@Html.LocalizedProjectLink(p.Value.Id)" class="project @c">
            <img src="@Url.Content(p.Value.NavigationLogo.ImagePath)" alt="@p.Value.Title" />
        </a>
        
    }
    <div class="clear">
    </div>
</div>

